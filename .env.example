# Server Scanner Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# HP OneView
# =============================================================================
ONEVIEW_IP=10.0.0.1
ONEVIEW_USERNAME=administrator
ONEVIEW_PASSWORD=your-password-here

# =============================================================================
# Dell OpenManage Enterprise
# =============================================================================
OME_IP=10.0.0.2
OME_USERNAME=admin
OME_PASSWORD=your-password-here

# =============================================================================
# Cisco UCS Central
# =============================================================================
UCS_CENTRAL_IP=10.0.0.3
UCS_CENTRAL_USERNAME=admin
UCS_CENTRAL_PASSWORD=your-password-here

# UCS Manager credentials (used to connect to individual domains)
UCS_MANAGER_USERNAME=admin
UCS_MANAGER_PASSWORD=your-password-here

# =============================================================================
# Kubernetes BareMetalHost Filter (Optional)
# =============================================================================
# Enable filtering of already-installed servers by checking BMH resources
K8S_CLUSTER_NAMES=cluster1,cluster2,cluster3
K8S_DOMAIN_NAME=example.com
K8S_USERNAME=admin
K8S_PASSWORD=your-password-here
# Optional: Use token authentication instead of username/password
# K8S_TOKEN=your-token-here
K8S_NAMESPACE=inventory
